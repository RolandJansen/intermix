{
  "name": "intermix",
  "version": "0.3.0",
  "description": "Javascript library for building sequencers",
  "main": "dist/intermix.js",
  "types": "dist/intermix.d.ts",
  "scripts": {
    "lint": "tslint src/main.ts",
    "clean": "rimraf dist/*",
    "docgen": "jsdoc -c conf.json --verbose",
    "docgen:md": "jsdoc2md src/**/*.js > doc/api.md",
    "prebuild": "npm run clean",
    "build": "webpack",
    "watch": "npm run test:karma && npm run watch:js &",
    "watch:cmd": "start cmd /k npm run test:karma && npm run watch:js",
    "test": "jest",
    "test:cmd": "npm run test:node:cmd",
    "build:js": "browserify src/main.js -o dist/intermix.js -v -p browserify-derequire -s intermix",
    "build:js:mini": "browserify src/main.js -o dist/intermix.min.js -d -v -s intermix -p browserify-derequire -p [minifyify --no-map]",
    "watch:js": "watchify src/main.js -o dist/intermix.js -v -d -p browserify-derequire -s intermix",
    "test:node": "istanbul cover --include-all-sources jasmine JASMINE_CONFIG_PATH=test/jasmine.json",
    "test:node:cmd": "istanbul cover --include-all-sources node_modules/jasmine/bin/jasmine.js JASMINE_CONFIG_PATH=test/jasmine.json",
    "test:karma": "karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RolandJansen/intermix.js.git"
  },
  "keywords": [
    "intermix.js",
    "sound",
    "audio",
    "web audio",
    "sequencer",
    "sequencing",
    "synthesizer",
    "synthesis",
    "music"
  ],
  "author": "Roland Jansen",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/RolandJansen/intermix.js/issues"
  },
  "homepage": "https://github.com/RolandJansen/intermix.js#readme",
  "eslintConfig": {
    "env": {
      "es6": true
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(unittest|e2etest))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testURL": "http://localhost/"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/webaudioapi": "0.0.27",
    "atob": "^2.0.3",
    "dts-bundle": "^0.7.3",
    "dts-bundle-webpack-wrapper": "^1.0.3",
    "jest": "^23.4.2",
    "jsdoc": "^3.4.0",
    "jsdoc-to-markdown": "^1.3.6",
    "rimraf": "^2.5.0",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.1.0",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.8.1",
    "web-audio-test-api": "^0.5.2",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13"
  }
}
