{
    "compilerOptions": {
        // https://www.typescriptlang.org/docs/handbook/compiler-options.html
        // https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
        "moduleResolution": "node",  //search for imports in node_modules
        // "outDir": "./dist",          //empty value because webpack takes care of it
        "outFile": "./dist/intermix.js",
        "sourceMap": true,
        "noEmitOnError": true,
        "removeComments": true,
        "module": "System",
        "target": "ES6",
        "declaration": true,   //generate typings
        "experimentalDecorators": true,  //should be experimental no more
        // "declarationDir": "./dts/",
        // "allowJs": true
        // "checkJs": true,
        "strict": true,
        "lib": [ "dom", "es7" ],  // used to get es7 lang features like [].includes()
    },
    "files": [
        "./src/main.ts"
    ]
    // "include": [
    //     "src/**/*"
    // ],
    // "exclude": [
    //     "node-modules",
    //     "dist/**/*"
    // ]
}