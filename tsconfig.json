{
    "compilerOptions": {
        //https://www.typescriptlang.org/docs/handbook/compiler-options.html
        "outDir": "",          //empty value because webpack takes care of it
        "sourceMap": true,
        "noEmitOnError": true,
        "module": "es6",
        "target": "es5",
        "declaration": true,   //generate typings
        "declarationDir": "./dts/",
        // "allowJs": true
        "strict": true
    },
    "include": [
        "src/**/*"
    ]
}